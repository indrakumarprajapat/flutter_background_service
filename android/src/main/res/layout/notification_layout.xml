<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/notif_small"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/notif_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingTop="8dp"
        android:singleLine="true"
        android:text="New booking Request"
        android:textColor="#000000"
        android:textSize="17sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/notif_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_title"
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingBottom="9dp"
        android:singleLine="true"
        android:text="You have new booking request"
        android:textColor="#292929"
        android:textSize="13sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/notif_content"
        android:layout_margin="10dp"
        android:paddingBottom="9dp"
        android:text="Open App"
        android:textColor="#26A895"
        android:textSize="15sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/notif_icon"
        android:layout_width="47dp"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="30dp"
        android:src="@mipmap/ic_launcher" />

</RelativeLayout>
